<configuration description="Runs TestMediaApp Unit Tests.">
    <option name="test-suite-tag" value="apct" />
    <option name="test-suite-tag" value="apct-instrumentation" />

    <target_preparer class="com.android.tradefed.targetprep.suite.SuiteApkInstaller">
        <option name="cleanup-apks" value="true" />
        <option name="test-file-name" value="TestMediaAppTests.apk" />
    </target_preparer>

    <!--Disable device animation and clear app data before test running. -->
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="settings put global window_animation_scale 0" />
        <option name="run-command" value="settings put global transition_animation_scale 0" />
        <option name="run-command" value="settings put global animator_duration_scale 0" />
    </target_preparer>

    <test class="com.android.tradefed.testtype.AndroidJUnitTest" >
        <option name="package" value="com.android.car.media.testmediaapp.tests" />
        <option name="runner" value="androidx.test.runner.AndroidJUnitRunner" />
    </test>
</configuration>
